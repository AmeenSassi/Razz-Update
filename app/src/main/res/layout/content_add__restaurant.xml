<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="razzteam.razz.Add_Restaurant"
    tools:showIn="@layout/activity_add_restaurant">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8sp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"


            android:text="@string/add_rest_page_title"
            android:id="@+id/add_rest_label"
            android:typeface="serif"
            android:textSize="40dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="@color/rest_title_color"
            android:clickable="false"


            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_rest_name"


            android:hint="Restaurant Name"
            android:focusableInTouchMode="true"
            android:padding="18sp"
            android:focusable="true" />



            android:layout_gravity="center_horizontal"


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_rest_type"

            android:hint="Restaurant Type"
            android:padding="18sp"
            android:focusable="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText_rest_phone_number"

            android:hint="Restaurant Phone Number"
            android:padding="18sp"
            android:focusable="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/editText_rest_address"

            android:hint="Address"
            android:padding="18sp"
            android:focusable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_rest_add_and_rate_button_text"
            android:id="@+id/button_add_and_rate"
            android:layout_gravity="right"
            android:padding="25dp" />


    </LinearLayout>

</RelativeLayout>
